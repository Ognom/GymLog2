<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="250dp"
        android:id="@+id/etExerciseName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp" />

    <Spinner
        android:id="@+id/spCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/etExerciseName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bConfirm"
        android:text="Confirm"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/bCancel"
        android:layout_alignRight="@+id/etExerciseName"
        android:layout_alignEnd="@+id/etExerciseName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bCancel"
        android:text="Cancel"
        android:textAllCaps="false"
        android:layout_marginBottom="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bConfirm"
        android:layout_toStartOf="@+id/bConfirm" />


</RelativeLayout>